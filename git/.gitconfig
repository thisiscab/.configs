[gitlab]
    user = thisiscab
[github]
    user = thisiscab
[user]
    email = me+github@thisis.cab
    name = CAB CAB
    signingkey = 57F43CF654D06C85 
[push]
    default = simple
    followTags = true
    autoSetupRemote = true
[pull]
    rebase = true
[branch]
    autosetuprebase = always
[core]
    autocrlf = false
    excludesfile = ~/.gitignore
    editor=vim
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[color]
    ui = true
[format]
    pretty = format:%C%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[commit]
    template = ~/.git_commit_msg.txt
    gpgsign = false
[merge]
    tool = vimdiff
    ff = true
    conflictstyle = diff3
[status]
    showUntrackedFiles = all
[color "diff"]
    whitespace = red reverse
[diff]
    colorMoved = default
[safe]
    directory = /usr/local/Homebrew
[gpg]
    program = /usr/local/bin/gpg
[init]
	defaultBranch = main
[advice]
   detachedHead = false
[http]
	postBuffer = 157286400
