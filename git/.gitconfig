[gitlab]
    user = thisiscab
[github]
    user = thisiscab
[user]
    email = me@thisis.com
    name = CAB CAB
    signingkey = 70AB926C37C29936
[push]
    default = simple
    followTags = true
    autoSetupRemote = true
[pull]
    rebase = true
[branch]
    autosetuprebase = always
[core]
    autocrlf = false
    excludesfile = ~/.gitignore
    pager = delta
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[color]
    ui = true
[format]
    pretty = format:%C%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[commit]
    template = ~/.git_commit_msg.txt
    gpgsign = true
[merge]
    tool = vimdiff
    ff = true
    conflictstyle = diff3
# [mergetool "vimdiff3"]
#     cmd = vim -f -d \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[status]
    showUntrackedFiles = all
# [difftool]
#     prompt = false
# [diff]
#     tool = vimdiff
    # wsErrorHighlight = all
[color "diff"]
    whitespace = red reverse
[diff]
    colorMoved = default
[safe]
    directory = /usr/local/Homebrew
[delta]
    features = side-by-side line-numbers decorations
[gpg]
    program = /usr/local/bin/gpg
